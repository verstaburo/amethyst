mixin section()
  +b.SECTION.section&attributes(attributes)
    block

mixin section-title(tag)
  +e(tag || 'h2').title&attributes(attributes)
    block

mixin section-content()
  +e.content&attributes(attributes)
    block

mixin ui-kit-section()
  +ui-section
    +ui-section-head
      +ui-title Блок section
      +ui-path
        p Блок: blocks/section/section
      +ui-description
        p Описание Блока

    +ui-section-content()
      +section
        +section-title Заголовок
        +section-content.content-zone
          h3 Внутренний заголовок
          p Содержание

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
