mixin lead()
  +b.SECTION.lead&attributes(attributes)
    +e.layer_back4
      +e.IMG.image(src="assets/images/parallax-layer-4.jpg")
    +e.layer_back3
      +e.IMG.image(src="assets/images/parallax-layer-3.png")
    +e.layer_back2
      +e.IMG.image(src="assets/images/parallax-layer-2.png")
    +e.layer_back1
      +e.IMG.image(src="assets/images/parallax-layer-1.png")
    +e.layer_base
      .container
        .container_inner
          +e.H1.title Consistent impeccable round-the-clock service
          +e.text We reliably deliver delightful customer experience in the civil business aviation industry specializing in such services as aircraft sales and acquisitions, aircraft management, charter sales and aviation consulting.
          +scrolldown().js-anchor(href="#services") Scroll down for more
    block

mixin ui-kit-lead()
  +ui-section
    +ui-section-head
      +ui-title Компонент lead
      +ui-path
        p Компонент: components/lead/lead
      +ui-description
        p Описание компонента

    +ui-section-content()
      +lead

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
