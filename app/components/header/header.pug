mixin header(page)
  +b.HEADER.header&attributes(attributes)
    .container
      +e.logo
        +e.IMG.image(src="assets/images/logo.svg")
      +e.slogan Your business aviation insider
      if page
        +e.page!=page
    block

mixin header-dark(page)
  +b.HEADER.header_dark&attributes(attributes)
    .container
      +e.A.logo(href='/')
        +e.IMG.image(src="assets/images/logo-dark.svg")
      +e.slogan Amethyst Jet - your business aviation insider
      if page
        +e.page!=page
    block

mixin ui-kit-header()
  +ui-section
    +ui-section-head
      +ui-title Компонент header
      +ui-path
        p Компонент: components/header/header
      +ui-description
        p Описание компонента

    +ui-section-content()
      +header
      +header-dark

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
